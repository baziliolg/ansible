[Unit]
Description=Resilio Sync service
Documentation=https://help.getsync.com/
After=network.target network-online.target

[Service]
Type=forking
User=root
Group=root
UMask=0002
Restart=on-failure
PermissionsStartOnly=true
PIDFile={{ hdd_mountpoint }}/.configs/.sync/sync.pid
ExecStart=/usr/bin/rslsync --webui.listen 0.0.0.0:8888 --storage {{ hdd_mountpoint }}/.configs/.sync

[Install]
WantedBy=multi-user.target
